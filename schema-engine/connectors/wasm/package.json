{
  "name": "@hiogawa/prisma-schema-diff-wasm",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.js"
    },
    "./pkg": {
      "import": "./pkg/index.js",
      "require": "./pkg/index.js",
      "types": "./pkg/index.d.ts"
    },
    "./pkg/index_bg.wasm": {
      "import": "./pkg/index_bg.wasm",
      "require": "./pkg/index_bg.wasm"
    }
  },
  "files": [
    "pkg/*",
    "dist/*"
  ],
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf pkg dist",
    "build": "pnpm run /^build:/",
    "build:wasm": "wasm-pack build --target web --out-name index ${BUILD_TYPE:---release}",
    "build:fix-pkg": "rm -f pkg/package.json pkg/.gitignore pkg/README.md",
    "test": "vitest",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "devDependencies": {
    "wasm-pack": "^0.12.1"
  }
}
